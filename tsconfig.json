{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "lib": ["ES2019", "dom"],
    "declaration": true,
    "isolatedModules": true,
    "sourceMap": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
